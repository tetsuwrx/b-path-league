{% extends "memberlistlayout.html" %}
{% block content %}
<table name="memberlist" class="bordered">
  <thead>
    <tr>
      <th>メンバーNo</th>
      <th>登録日</th>
      <th>なまえ</th>
      <th>クラス</th>
      <th>勝ラック数</th>
      <th>性別</th>
      <th>編集</th>
    </tr>
  </thead>
  {% if memberlist|length > 0 %}
  {% for member in memberlist %}
  <tbody>
    <tr>
      <td>{{ member.memberno }}</td>
      <td>{{ member.registdate }}</td>
      <td>{{ member.name }}</td>
      <td>
        <select name="class">
          {% if member.class == 'UC' %}
            <option value="UC" selected><p name="memberclass">UC</p></option>
          {% else %}
            <option value="UC"><p name="memberclass">UC</p></option>
          {% endif %}
          {% if member.class == 'C' %}
            <option value="C" selected><p name="memberclass">C</p></option>
          {% else %}
            <option value="C"><p name="memberclass">C</p></option>
          {% endif %}
          {% if member.class == 'B' %}
            <option value="B" selected><p name="memberclass">B</p></option>
          {% else %}
            <option value="B"><p name="memberclass">B</p></option>
          {% endif %}
          {% if member.class == 'A' %}
            <option value="A" selected><p name="memberclass">A</p></option>
          {% else %}
            <option value="A"><p name="memberclass">A</p></option>
          {% endif %}
          {% if member.class == 'SA' %}
            <option value="SA" selected><p name="memberclass">SA</p></option>
          {% else %}
            <option value="SA"><p name="memberclass">SA</p></option>
          {% endif %}
      </td>
      <td>{{ member.score }}</td>
      <td>{{ member.sex }}</td>
      <td><input type="button" value="編集"></td>
    </tr>
  </tbody>
  {% endfor %}
  {% endif %}
</table>
{% endblock %}
